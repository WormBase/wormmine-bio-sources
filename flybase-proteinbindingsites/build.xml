<project name="flybase-proteinbindingsites-tasks" default="default" basedir=".">
  <description>build flybase-proteinbindingsites tasks</description>
  <import file="../../../imbuild/source.xml"/>

  <!-- no retrieve or translate -->
  <target name="retrieve"/>
  <target name="translate"/>
  
  <target name="load" depends="init, -init-deps">
    <taskdef name="read-proteinbindingsites"
             classname="org.intermine.bio.dataconversion.FlyBaseProteinBindingSiteLoaderTask"
             classpathref="task.class.path"/>
    <read-proteinbindingsites integrationWriterAlias="integration.production"
                              sourceName="${source.name}"
                              taxonId="${taxonId}">
      <fileset dir="${src.data.dir}" includes="${src.data.dir.includes}"/>
    </read-proteinbindingsites>
  </target>

</project>
